<?xml version="1.0" encoding="UTF-8"?>

<zk xmlns="http://www.zkoss.org/2005/zul">
    <window id="windowAddCustomerGroup" title="Add Customer Group" width="600px" apply="controller.project.masterdata.customer.customergroup.AddCustomerGroupController">
        <grid class="custom-grid" width="600px">
            <columns>
                <column width="120px" align="right" />
                <column width="100%" align="left" />
            </columns>
            <rows>
                <row>
                    <label value="Group Name :"/>
                    <textbox id="textGroupName" width="400px"/>
                </row>
                <row> 
                    <label value="Description :"  />
                    <textbox id="textDescription" cols="80" rows="6"/>
                </row>
            </rows>
        </grid>
        <toolbar>
            <toolbarbutton image="/icons/btn_save2_16x16.gif" id="btnSaveCustomerGroup" tooltip="Save CustomerGroup" tooltiptext="Save Customer Group"/>
            <toolbarbutton image="/icons/btn_cancel2_16x16.gif" id="btnCancelCustomerGroup" tooltip="Cancel CustomerGroup" tooltiptext="Cancel Customer Group"/>
        </toolbar>

    </window>
</zk>
